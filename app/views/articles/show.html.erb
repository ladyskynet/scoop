<!-- Header -->
<div id="header">
	<!--<span class="logo icon fa-paper-plane-o"></span>-->
	<img src="../../../images/scoop.png" height="125" width="125"> 
	<h1>Scoop</h1>
	<p>A custom RSS reader. </p>
	<nav>
		<ul>
			<li><a href="/feeds#feedsIndexAnchor">Feeds</a></li>
			<li><a href="/form_search#formSearchAnchor">Search</a></li>
			<li><a href="/feeds/2/articles">Explore</a></li>
			<li><a href="/">Home</a></li>
		</ul>
	</nav>
</div>

<!-- MAIN --> 
<div id="main">
	<div class="box container">
		<section>
			<header>
				<h3><%=@article.title%> by <%=@article.author%></h3>
			</header>
			<form method="post" action="#">
				<div class="row">
					<div class="12u">
						<label for="title">Title</label>
						<input class="text" type="text" name="title" id="title" value="<%=@article.title%>" />
					</div>
				</div>
				<div class="row">
					<div class="12u">
						<label for="author">Author</label>
						<input class="text" type="text" name="author" id="author" value="<%=@article.author%>" />
					</div>
				</div>
				<div class="row">
					<div class="12u">
						<label for="published">Published</label>
						<input class="text" type="text" name="published" id="published" value="<%=@article.published%>" />
					</div>
				</div>
				<div class="row">
					<div class="12u">
						<label for="content">Content</label>
						<textarea name="content" rows="6"><%= @article.content %></textarea>
					</div>
				</div>

				<div class="row">
					<div class="12u">
						<ul class="actions">
							<li><%= button_to 'Back', articles_path(@article.feed_id), method: :get%></li>
						</ul>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>
<!-- Footer -->
<div id="footer">
	<div class="container 75%">
		<header class="major last">
			<h2>Made by the Supreme Team for CS499.</h2>
		</header>
	</div>
</div>