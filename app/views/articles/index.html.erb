<html>
	<head>
    	<title>Scoop Articles</title>
    	<meta charset="utf-8" />
    	<meta name="viewport" content="width=device-width, initial-scale=1" />
    	<!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
    	<link rel="stylesheet" href="../../assets/css/main.css" />
    	<!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
  	</head>
  	<body>

  		<!-- Header -->
    
  		<div id="header">
      		<img src="../../images/scoop.png" height="125" width="125"> 
      		<h1>Scoop.</h1>
      		<p>A custom RSS reader.</p>
  		</div>
  		
  		<!-- Main -->
  		
  		<div id="main">

  		<!-- TABLE SECTION-->

  			<section>
    			<p id="notice"><%= notice %></p>
    			<div class="box container">
      				<header>
        				<h2><%=@feed.name%> Articles</h2>
      				</header>
      				<% @articles.each do |article| %>
      					<%= link_to article.title, article %> - <i> published <%= time_ago_in_words(article.published) %> ago.</i> <br>
      				<% end %>
    			</div>
  			</section>
		</div>
		<!-- Scripts -->
		<script src="../../assets/js/jquery.min.js"></script>
		<script src="../../assets/js/skel.min.js"></script>
		<script src="../../assets/js/util.js"></script>
		<!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
		<script src="../../assets/js/main.js"></script>
	</body>
</html>