<!-- Header -->
<div id="header">
  <img src="../../images/scoop.png" height="125" width="125"> 
  <h1>Scoop</h1>
  <p>A custom RSS reader.</p>
</div>
<!-- Main -->
<div id="main">
  <!-- TABLE SECTION-->
  <section>
		<p id="notice"><%= notice %></p>
		<div class="box container">
				<header>
  				<h2><%=@feed.name%> Articles</h2>
				</header>
				
          <% @articles.each do |article| %>
					 <%= link_to article.title, article %> - <i> published <%= time_ago_in_words(article.published) %> ago.</i> <br>
				  <% end %>
       <br>
        <ul class="actions">
          <li><%= button_to 'Search', form_search_path, method: :get %></li>
          <li><%= button_to 'Back', feeds_path, method: :get %></li>
        </ul>
		</div>
	</section>
</div>
<div id="footer">
  <div class="container 75%">

    <header class="major last">
      <h2>Questions or comments?</h2>
    </header>

    <p>Send us a message.</p>

    <form method="post" action="#">
      <div class="row">
        <div class="6u 12u(mobilep)">
          <input type="text" name="name" placeholder="Name" />
        </div>
        <div class="6u 12u(mobilep)">
          <input type="email" name="email" placeholder="Email" />
        </div>
      </div>
      <div class="row">
        <div class="12u">
          <textarea name="message" placeholder="Message" rows="6"></textarea>
        </div>
      </div>
      <div class="row">
        <div class="12u">
          <ul class="actions">
            <li><input type="submit" value="Send Message" /></li>
          </ul>
        </div>
      </div>
    </form>

    <ul class="icons">
      <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
      <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
      <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
      <li><a href="#" class="icon fa-github"><span class="label">Github</span></a></li>
      <li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
    </ul>
  </div>
</div>