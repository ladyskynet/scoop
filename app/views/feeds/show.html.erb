<!-- Header -->
<div id="header">
	<!--<span class="logo icon fa-paper-plane-o"></span>-->
	<img src="../images/scoop.png" height="125" width="125"> 
	<h1>Scoop</h1>
	<p>A custom RSS reader.</p>
	<nav>
		<ul>
			<li><a href="/feeds">Feeds</a></li>
			<li><a href="/form_search">Search</a></li>
			<li><a href="/feeds/2/articles">Explore</a></li>
			<li><a href="/">Home</a></li>
		</ul>
	</nav>
</div>

<a id="feedsShowAnchor"></a>
<!-- MAIN --> 
<div id="main">
	<div class="box container">
		<section>

			<header>
				<% flash.each do |key, value| %>
						<div class="alert alert-<%= key %> alert-dismissible">
						<!--<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>-->
						<%= value %>
						</div>
				<% end %>
				
				<h3><%=@feed.name%></h3>
			</header>
			<form method="post" action="#">
				<div class="row">
					<div class="12u">
						<label for="name">Name</label>
						<input class="text" type="text" name="name" id="name" value="<%=@feed.name%>" />
					</div>
				</div>
				<div class="row">
					<div class="12u">
						<label for="url">URL</label>
						<input class="text" type="text" name="url" id="url" value="<%=@feed.url%>" />
					</div>
				</div>
				<div class="row">
					<div class="12u">
						<label for="description">Description</label>
						<textarea name="description" id="description" rows="6"><%=@feed.description%></textarea>
					</div>
				</div>
				<%= hidden_field_tag 'search', @search %>
				<div class="row">
					<div class="12u">
						<ul class="actions">
							<% url2 = feeds_path + "#feedsIndexAnchor"%>
							<li><h3><%= link_to 'Edit', edit_feed_path(@feed) %></h3></li>
							<li><h3><%= link_to 'Back', url2 %></h3></li>
						</ul>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>
<!-- Footer -->
<div id="footer">
	<div class="container 75%">
		<header class="major last">
			<h2>Made by the Supreme Team for CS499.</h2>
		</header>
	</div>
</div>