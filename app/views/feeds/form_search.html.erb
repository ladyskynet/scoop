<!-- Header -->
<div id="header">
	<!--<span class="logo icon fa-paper-plane-o"></span>-->
	<img src="../images/scoop.png" height="125" width="125"> 
	<h1>Scoop</h1>
	<p>A custom RSS reader. </p>
</div>

<!-- MAIN --> 
<div id="main">
	<div class="box container">
		<section>
			<header>
				<h3>Search the Feeds</h3>
			</header>
			<div>
    			<!-- Form to get user input required for search report creation -->
                <%= form_tag(search_path, :method => "get", id: "search-form") do %>
					<!-- Creates search box user can type queries into-->
                	
                	<div class="row" id="tftsearch">
                		<div class="9u 12u(mobilep)">
                			<label for="tftsearch">Query</h4>
                			<%= text_field_tag :search, params[:search], placeholder: "Enter keywords", id: "tftsearch"%>
                		</div>
                			<ul class="icons">
                				<li><a href=<%=info_path%> class="icon fa-question"><span class="label">Twitter</span></a></li>
                			</ul>
                	</div>
               		
                	<div class="row" id="ulwithdates">
                		<div class="6u 12u(mobilep)">
                			<label for="from">From</label>
                			<input type="text" id="from" name="from" placeholder="Start Date">
                		</div>
                		<div class="6u 12u(mobilep)">
                			<label for="to">To</label>
                			<input type="text" id="to" name="to" placeholder="End Date">
                		</div>
                	</div>

                	<script>
                		var from = $( "#from" ).datepicker({maxDate: '0'});
                		var to = $("#to" ).datepicker({maxDate: '0'});    
                	</script>
                	</label><br>
                	<label for="tableoffeeds">RSS Feeds</label>
                	<div class="row">
                		<div class="table-wrapper">
        				<tbody>
        					<!--Creates checkboxes for each feed-->
        					<% @feeds_selected.each do |feed| %>
            					<tr>
              						<!-- Puts all feeds that were marked true into an array referenced through selected[]-->
              						<%= check_box_tag :"selected[]", feed.id, true %>
             						<td><%= feed.name %></td>
             						<br>
            					</tr>
            				<% end %>
            			</tbody>
            		</div>
            		</div>
            		<br>
                    <%= submit_tag "Search", :name => nil %>
                <% end %>
			</div>
		</section>
	</div>
</div>
<!-- Footer -->
<div id="footer">
	<div class="container 75%">

		<header class="major last">
			<h2>Questions or comments?</h2>
		</header>

		<p>Send us a message.</p>

		<form method="post" action="#">
			<div class="row">
				<div class="6u 12u(mobilep)">
					<input type="text" name="name" placeholder="Name" />
				</div>
				<div class="6u 12u(mobilep)">
					<input type="email" name="email" placeholder="Email" />
				</div>
			</div>
			<div class="row">
				<div class="12u">
					<textarea name="message" placeholder="Message" rows="6"></textarea>
				</div>
			</div>
			<div class="row">
				<div class="12u">
					<ul class="actions">
						<li><input type="submit" value="Send Message" /></li>
					</ul>
				</div>
			</div>
		</form>

		<ul class="icons">
			<li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
			<li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
			<li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
			<li><a href="#" class="icon fa-github"><span class="label">Github</span></a></li>
			<li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
		</ul>
	</div>
</div>